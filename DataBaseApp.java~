    {
      if (!currentView.equals ("Graph"))
        currentView = "Graph";
      
      b = new BarGraph ();
      r.graphView (b);
      b.frame.setVisible (true);
    }
    
    else if (ae.getActionCommand().equals("Sort")) 
    {
      if (currentView.equals("Chart"))
        r.getChartData();
      specifySort ();
    }
    
    else if (ae.getActionCommand().equals("Search")) 
    {
      if (currentView.equals("Chart"))
        r.getChartData();
      specifySearch ();
    }
    else if (ae.getActionCommand().equals("Help"))
    {
      String progpath = new String ("hh.exe youtube.chm");
      try
      {
        Runtime.getRuntime ().exec (progpath);
      }
      catch (Exception e)
      {
        JOptionPane.showMessageDialog(this,"Couldn't find the Help File");
      }
    }
    
    else if (ae.getActionCommand ().equals ("Quit"))
    {
      r.saveChecker();
      System.exit (0);
    }
    else if (ae.getActionCommand ().equals ("Change Admin Password"))
    {
      if (r.admin)
      {
        r.changePassword ();
      }
    }
    this.invalidate();
    this.validate();
    this.repaint();
  }  
  
