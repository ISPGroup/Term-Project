  public void actionPerformed (ActionEvent ae)
  {
    if (ae.getActionCommand ().equals("New"))
    {
      r.saveChecker();
      r.newDatabase();
      r.fileName = null;
      r.fieldView();
      r.updateDisplay();
    }
    
    else if (ae.getActionCommand ().equals("About"))
      JOptionPane.showMessageDialog(this,"Program by JDL");
